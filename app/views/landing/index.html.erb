<div class = "background">
	<img src="assets/landing-bg-1.jpg" class="img-responsive" alt="Responsive image" id="background">
</div>

	<div class = "bg-overlay">
		<div class = "row">
			<div id = "box-1" div class = "col-md-6 col-md-offset-2 white-trans">
				
				<h2>My home is your workspace </h2>

					<h4 class= "gray-text">Join the sharing economy by renting out your home during the day.</h4>
			
				
			</div>
		</div>

		<!-- Why must I instantiate User.new instead of user @user? -->
		<div id = "grind">
			<%= form_for(User.new) do |f| %>

				<div class = "row">
					<div id = "box-2" class = "col-md-4 col-md-offset-4 black-trans">			
						<div class = "row">
							<div class = "col-md-8 col-md-offset-2">

								<h4>I'd like to:</h4>

								<label class = "checkbox">
									<%= f.check_box :provide %>
									<%= f.label "Provide my space" %>
			    			</label>	
			    			<label class = "checkbox">
									<%= f.check_box :rent %>
			    				<%= f.label "Rent space" %>
			    			</label>	
									

							</div>
						</div>
			 
				<div class = "row">
					<div class = "col-md-8 col-md-offset-2" id = "email-field">

						<%= f.text_field :email, placeholder: "email", class: "form-control" %>

					</div>
				</div>

					<%= submit_tag "Request Invite", class: "btn btn-lg btn-default hero-button" %>
					<br>
					<div id= "counter" class = "center">
						<%= @user + 95 %> people have requested an invite</p>
					</div>
			</div>	

		<% end %>	
				</div>
			</div>
		</form>
	</div>
	







