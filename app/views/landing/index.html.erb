<div class = "big-box">

	<div id = "box-1" div class = "hero-box white-trans">
		<h2>My home is your workspace </h2>
		<h4><%= simple_format "Join the sharing economy \n by renting out your home during the day."%></h4>
	</div>

	<div id = "box-2" class = "black-trans">			
		<%= text_field_tag :email, nil, placeholder: "email", class: "form-control" %>
		<h4>I'd like to </h4>
		
		<label class= "checkbox-inline">
			<input type= "checkbox" id="inlineCheckbox1" value="provide my space"> <h4>provide my space</h4>
		</label>
		<label class= "checkbox-inline">
			<input type= "checkbox" id="inlineCheckbox2" value="rent space"> <h4>rent space</h4>
		</label>

		
		<%= submit_tag "Add to Waitlist", class: "btn btn-lg btn-default hero-button" %>

	</div>
			

</div>




<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
